<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.ahpu.mapper.AcademyMapper">

    <select id="getAllAcademy" resultType="cn.ahpu.pojo.Academy">
      select * from academy;
    </select>

    <select id="getAcademyById" resultType="cn.ahpu.pojo.Academy">
        select * from academy
        where id = #{id};
    </select>
    <select id="getAcademyIdByName" resultType="java.lang.Integer">
        select id from  academy
        where name = #{name};
    </select>

    <insert id="addAcademy" >
        insert into academy values (null,#{academyName});
    </insert>

</mapper>