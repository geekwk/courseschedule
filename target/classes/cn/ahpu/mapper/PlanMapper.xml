<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.ahpu.mapper.PlanMapper">

    <resultMap id="PlanByTermCascade" type="cn.ahpu.pojo.Plan">
        <id property="id" column="id"></id>
        <result property="level" column="level"></result>
        <result property="info" column="info"></result>
        <result property="term" column="term"></result>
        <association property="depart" select="cn.ahpu.mapper.DepartMapper.getDepartById" column="depart">

        </association>
        <association property="course" select="cn.ahpu.mapper.CourseMapper.getCourseById" column="course">

        </association>
    </resultMap>

    
    <select id="getPlanByTerm" resultMap="PlanByTermCascade">
        select * from plan
        where depart = #{departId} and plan.level = #{level} and term = #{term};
    </select>
    <select id="getDepartWithLevelList" resultType="cn.ahpu.pojo.DepartWithLevel">
      select distinct depart.*,level from depart,plan
      where plan.depart = depart.id;
    </select>
    <select id="getDepartWithLevelListOfCourse" resultType="cn.ahpu.pojo.DepartWithLevel">
        select distinct depart.*,level from depart,plan
      where plan.depart = depart.id and course = #{id} and((level = #{year} and term = #{term}) or (level = #{year}-1 and term = #{term}+2) or (level = #{year}-2 and term = #{term}+4) or (level = #{year}-3 and term = #{term}+6));
    </select>

    <insert id="addPlan" parameterType="cn.ahpu.pojo.Plan">
        insert into plan values (null,#{plan.depart.id},#{plan.course.id},#{plan.level},#{plan.info},#{plan.term});
    </insert>

    <delete id="deletePlanById">
        delete from plan where id = #{planId};
    </delete>

</mapper>